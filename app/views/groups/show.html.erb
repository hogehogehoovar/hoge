<div class="main">
  <div class="contents">
    <div class = "card-panel teal lighten-4">
      <h4 class="center">
        現在の参加者: <%= @users.length %>人
      </h4>
    </div>

    <div class = "member_window">
      <div class = "row">
        <% @users.each do |user| %>
          <div class="col s3">
            <%= image_tag "test.jpg", class: "circle responsive-img" %>
            <h6 class="center black-text">名前: <%= user.name %> </h6>
            <h6 class="center black-text">年齢: <%= user.age %> </h6>
            <h6 class="center black-text">職業: <%= user.job %> </h6>
          </div>
        <% end %>
      </div>
    </div>


    <!--参加の意思表示ボタン  -->

    <!--現地までの地図など  -->
    <div class = "row">
      <div class = "col s6">
        <div class="card-panel white lighten-5" href = "**">
           <a href = "****">レストラン名</a>
          <p>予算 **円</p>
          <p>**:**~**:**</p>
        </div>
        <%= image_tag "restaurant.jpg", class: "responsive-img" %>

      </div>
      <div class = "col s6">
        <div id="map" style='width: 400px; height: 306px;'></div>
      </div>

    </div>
    <div class = "center">
      <!-- ToDo: モーダルの表示 -->
      <% if @group_user.attendance %>
        <div class="card-panel teal lighten-4" id="result">
          <h5 class="center"> 参加確定!!</h5>
        </div>
      <% else %>
        <%= link_to "参加します", attend_event_group_group_users_path(@event, @group), id: 'attend_button', class: "waves-effect waves-light btn" ,remote: true %>
        <%= link_to "不参加", event_groups_path(@event), id: 'absent_button', class: "waves-effect waves-light btn"%>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      handler.getMap().setZoom(16);
    });
</script>
